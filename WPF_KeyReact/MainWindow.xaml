<Window x:Class="WPF_KeyReact.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_KeyReact"
        mc:Ignorable="d"
        Title="Závody aut" Height="600" Width="1000" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Name="GridMain" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="Images/background_track.png"/>
        </Grid.Background>

        <local:TimeAndLapsUserControl VerticalAlignment="Top" HorizontalAlignment="Left" Width="auto" Height="auto"/>

        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="50" Height="25" Name="ButtonCar" 
                RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="Images/arrow.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
